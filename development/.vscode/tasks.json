{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Honcho SocketIO Watch Schedule Worker",
      "detail": "When stopping the debug process from vscode window, the honcho won't receive the SIGINT signal. This task will send the SIGINT signal to the honcho processes.",
      "type": "shell",
      "command": "pkill -SIGINT -f bench; pkill -SIGINT -f socketio",
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "close": true
      }
    },
    {
      "label": "Start Frappe Server",
      "type": "shell",
      "command": "bash start.sh",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "terminals"
      },
      "problemMatcher": []
    },
    {
      "label": "Open App Development Folder",
      "type": "shell",
      "command": "cd frappe-bench/apps/${input:appName} && exec bash",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "terminals"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Frappe Watch",
      "type": "shell",
      "command": "cd frappe-bench/apps/${input:appName}/${input:appName} && npx frappe-watch --bundle",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "terminals"
      },
      "problemMatcher": []
    },
    {
      "label": "Start All Development Terminals",
      "dependsOn": [
        "Start Frappe Server",
        "Open App Development Folder",
        "Start Frappe Watch"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "appName",
      "type": "promptString",
      "description": "Enter the app folder name (e.g., frappe_brazil_invoice)",
      "default": "frappe_brazil_invoice"
    }
  ]
}